{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "outDir": "dist",
    "composite": false,
    "declaration": false,
    "inlineSources": false,
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
